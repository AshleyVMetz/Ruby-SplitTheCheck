<p id="notice"><%= notice %></p>

<div class= "search">
<%= form_tag(restaurants_search_path, method: :get) do %>
   <div class = "search-one">
    <%= label_tag(:name, "Restaurant Name") %>
    <%= text_field_tag(:name) %>
   </div>
   <div class = "search-two">
    <%= label_tag(:city, "Restaurant City") %>
    <%= text_field_tag(:city) %>
   </div>
   <div class = "search-three">
    <%= label_tag(:state, "Restaurant State") %>
    <%= text_field_tag(:state) %>
   </div>
    <%= submit_tag("Search") %>
<% end %>
</div>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>Split</th>
      <th>Nosplit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td><%= restaurant.split %></td>
        <td><%= restaurant.nosplit %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a Restaurant', new_restaurant_path, class: "button" %>
<%= link_to 'User Summary', users_show_path(current_user.id), class: "button" %>



